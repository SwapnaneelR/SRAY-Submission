{
  "manifest_version": 3,
  "name": "AlgoAid",
  "version": "0.1",
  "author": "Swapnaneel Ray",
  "description": "This Chrome extension allows users to talk to a AI powered chatbot in case they are stuck on any problem on the AZ platform.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/*.png"
      ],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/bookmark.png",
      "24": "assets/bookmark.png",
      "32": "assets/bookmark.png"   
    },
    "default_popup": "index.html",
    "default_title": "AlgoAid - AI chatbot to help users solve dsa doubts."
  }
}
